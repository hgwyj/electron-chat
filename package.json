{
  "name": "electron-chat",
  "version": "1.0.0",
  "description": "Electron chat use webRTC",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "keywords": [
    "Electron",
    "react",
    "cli",
    "webpack4",
    "babel",
    "tutorial",
    "webRTC"
  ],
  "author": "hg",
  "license": "CC0-1.0",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.6.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.0.0",
    "electron": "^5.0.5",
    "electron-builder": "^20.44.4",
    "html-webpack-plugin": "^3.2.0",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.7.0",
    "postcss-loader": "^3.0.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "antd": "^3.19.8",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "build": {
    "productName": "electron-chat",
    "appId": "electron-chat",
    "asar": false,
    "files": [
      "package.json",
      "main.js",
      "icon.ico",
      "node_modules"
    ],
    "npmRebuild": false,
    "dmg": {
      "artifactName": "electron-chat.dmg",
      "contents": [
        {
          "type": "link",
          "path": "/Applications",
          "x": 410,
          "y": 150
        },
        {
          "type": "file",
          "x": 130,
          "y": 150
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutname": "electron-chat"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.ico"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "directories": {
      "buildResources": "resources",
      "output": "dist/"
    }
  }
}
